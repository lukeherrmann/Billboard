<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<hr />
<%= form_with(model: @artist, local: true, class: "ui form") do |f| %>
  <div class= "field">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>
  <br />
  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <hr />
  <%= f.submit %>
<% end %>